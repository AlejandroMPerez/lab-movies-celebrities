<h2>Create a new movie</h2>

<form method="post" action="/movies/create">
    <label>Title:</label>
    <input name="title"></input>
    <label>Genre:</label>
    <input name="genre"></input>
    <label>Plot:</label>
    <input name="plot"></input>

    <br><hr/>

    <label for="cast">Choose a celebrity:</label>
    <p><select name="cast" multiple>
        {{#each allCelebrities}}
            <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select></p>

    <p><button type="submit">Create Movie</button></p>
</form>