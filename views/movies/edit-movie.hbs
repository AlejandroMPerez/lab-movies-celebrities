<h2>Edit Movie</h2>

<form method="post" action="/movies/{{movie._id}}/edit">
    <label>Title:</label>
    <input name="title" value="{{movie.title}}"></input>
    <label>Genre:</label>
    <input name="genre" value="{{movie.genre}}"></input>
    <label>Plot:</label>
    <input name="plot" value="{{movie.plot}}"></input>

    <label for="cast">Choose Celebrities</label>
    <p><select name="cast" multiple>
        {{#each celebrities}}
            <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select></p>

    <button type="submit">Edit Movie</button>
</form>